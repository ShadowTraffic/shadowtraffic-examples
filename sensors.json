{
    "generators": [
        {
            "table": "sensors",
            "fork": {
                "key": {
                    "_gen": "sequentialString",
                    "expr": "sensor-~d"
                },
                "maxForks": 5,
                "stagger": { "ms": 250 }
            },
            "row": {
                "sensorId": {
                    "_gen": "var", "var": "forkKey"
                },
                "timestamp": {
                    "_gen": "toInstant",
                    "ms": {
                        "_gen": "now"
                    }
                }
            },
            "stateMachine": {
                "_gen": "stateMachine",
                "initial": "start",
                "transitions": {
                    "start": "update",
                    "update": "update"
                },
                "states": {
                    "start": {
                        "row": {
                            "value": {
                                "_gen": "normalDistribution",
                                "mean": 50,
                                "sd": 5
                            }
                        }
                    },
                    "update": {
                        "row": {
                            "value": {
                                "_gen": "add",
                                "args": [
                                    {
                                        "_gen": "uniformDistribution",
                                        "bounds": [-1, 1]
                                    },
                                    {
                                        "_gen": "previousEvent",
                                        "path": [ "row", "value" ]
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "localConfigs": {
                "throttleMs": 1000
            }
        }
    ],
    "connections": {
        "pg": {
            "kind": "postgres",
            "connectionConfigs": {
                "host": "localhost",
                "port": 5432,
                "username": "postgres",
                "password": "postgres",
                "db": "mydb"
            }
        }
    }
}
