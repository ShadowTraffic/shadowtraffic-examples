{
    "generators": {
        "topic": "tweets",
        "value": {
            "userId": {
                "_gen": "lookup",
                "topic": "users",
                "path": [
                    "key"
                ],
                "histogram": {
                    "_gen": "histogram",
                    "bins": [
                        {
                            "bin": 0.2,
                            "frequency": 8
                        },
                        {
                            "bin": 0.8,
                            "frequency": 2
                        }
                    ]
                }
            }
        }
    },
    "connections": {
        "dev-kafka": {
            "kind": "kafka",
            "producerConfigs": {
                "bootstrap.servers": "localhost:9092",
                "key.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer",
                "value.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer"
            }
        }
    }

}
