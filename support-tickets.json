{
    "generators": [
        {
            "connection": "dev-pg",
            "table": "customers",
            "row": {
                "username": {
                    "_gen": "string",
                    "expr": "#{Name.username}"
                },
                "address": {
                    "_gen": "string",
                    "expr": "#{Address.fullAddress}"
                }
            }
        },
        {
            "connection": "dev-kafka",
            "topic": "purchases",
            "key": {
                "_gen": "uuid"
            },
            "value": {
                "customerId": {
                    "_gen": "lookup",
                    "connection": "dev-pg",
                    "table": "customers",
                    "path": [
                        "username"
                    ]
                },
                "product": {
                    "_gen": "string",
                    "expr": "#{Commerce.productName}"
                },
                "creditCard": {
                    "_gen": "string",
                    "expr": "#{Finance.creditCard}"
                }
            }
        },
        {
            "connection": "dev-kafka",
            "topic": "supportTickets",
            "key": {
                "_gen": "lookup",
                "topic": "purchases",
                "path": [
                    "key"
                ]
            },
            "value": {
                "timestamp": {
                    "_gen": "now"
                }
            },
            "localConfigs": {
                "throttleMs": 5000
            }
        }
    ],
    "connections": {
        "dev-kafka": {
            "kind": "kafka",
            "producerConfigs": {
                "bootstrap.servers": "localhost:9092",
                "key.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer",
                "value.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer"
            }
        },
        "dev-pg": {
            "kind": "postgres",
            "connectionConfigs": {
                "host": "localhost",
                "port": 5432,
                "username": "postgres",
                "password": "postgres",
                "db": "mydb"
            }
        }
    }
}
